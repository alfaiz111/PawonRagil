// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  nama      String
  role      String   @default("user") // "user" atau "admin"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  pesanan   Pesanan[]
}

model Kategori {
  id          String   @id @default(uuid())
  nama        String   @unique
  deskripsi   String?
  gambar      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  menu        Menu[]
}

model Menu {
  id          String   @id @default(uuid())
  nama        String
  deskripsi   String?
  harga       Int
  gambar      String?
  tersedia    Boolean  @default(true)
  kategoriId  String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  kategori    Kategori @relation(fields: [kategoriId], references: [id], onDelete: Cascade)
  pesananItems PesananItem[]
}

model Pesanan {
  id              String   @id @default(uuid())
  userId          String
  namaPelanggan   String
  nomorMeja       String?
  totalHarga      Int
  status          String   @default("pending") // "pending", "diproses", "selesai", "dibatalkan"
  catatan         String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  user            User @relation(fields: [userId], references: [id], onDelete: Cascade)
  items           PesananItem[]
}

model PesananItem {
  id          String   @id @default(uuid())
  pesananId   String
  menuId      String
  jumlah      Int
  harga       Int
  createdAt   DateTime @default(now())
  
  pesanan     Pesanan @relation(fields: [pesananId], references: [id], onDelete: Cascade)
  menu        Menu @relation(fields: [menuId], references: [id])
}
